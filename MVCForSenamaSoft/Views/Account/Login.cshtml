@model MVCForSenamaSoft.ViewModels.LoginModel

<a asp-action="Register" asp-controller="Account">Register</a>
 
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Domain">Domain</label><br />
            <input type="text" asp-for="Domain" />
            <span asp-validation-for="Domain" />
        </div>
        <div>
            <label asp-for="UserName">User Name</label><br />
            <input type="text" asp-for="UserName" />
            <span asp-validation-for="UserName" />
        </div>
        <div>
            <label asp-for="Password">Password</label><br />
            <input type="text" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        
        <div>
            <input type="submit" value="LOGIN" />
        </div>
    </div>
</form>
